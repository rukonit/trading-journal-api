generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String?
  accounts String[]
}

model Trade {
  id Int @id @default(autoincrement())
  account String
  date DateTime
  currency String
  type Int
  side String
  quantity Int
  price Float
  grossProceeds Float
  netProceeds Float
  email String
}
